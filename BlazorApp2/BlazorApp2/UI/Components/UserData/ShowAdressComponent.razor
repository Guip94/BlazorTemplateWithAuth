


@if(UserAdress is not null)
{
    <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h6">User Address</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudText>State: @UserAdress.Country</MudText>
            <MudText>City: @UserAdress.City</MudText>
            <MudText>Zip Code: @UserAdress.Zipcode</MudText>
            <MudText>Street: @UserAdress.Street</MudText>
        </MudCardContent>
    </MudCard>
}
else
{
    <MudText>No address information available.</MudText>


    <MudCardContent>
        <MudButton >Add adress</MudButton>
    </MudCardContent>
}