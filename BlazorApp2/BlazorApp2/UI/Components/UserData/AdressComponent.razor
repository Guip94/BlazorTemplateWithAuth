
<MudCardContent>



    @if(Adress is not null)
    {
        
        <MudPaper>

            <MudText Typo="Typo.h6">Address</MudText>
            <MudTextField @bind-Value="@Adress.Country" Label="Country" Variant="Variant.Outlined" Margin="Margin.Dense" />
            <MudTextField @bind-Value="@Adress.City" Label="City" Variant="Variant.Outlined" Margin="Margin.Dense" />
            <MudTextField @bind-Value="@Adress.Zipcode" Label="ZipCode" Variant="Variant.Outlined" Margin="Margin.Dense" />
            <MudTextField @bind-Value="@Adress.Street" Label="Street" Variant="Variant.Outlined" Margin="Margin.Dense" />

        </MudPaper>

    }

    else
    {
        <MudPaper>

            <MudText Typo="Typo.h6">No Address registered</MudText>

            <MudButton OnClick="RenderAddAddressComponent" Color="Color.Primary" EndIcon="@Icons.Material.Filled.House">
                Add Address</MudButton>

            @if(renderAddAddressComponent is true)
            {
                    <BlazorApp2.UI.Components.UserData.AddAdressComponent/>
            }


        </MudPaper>
    }

</MudCardContent>