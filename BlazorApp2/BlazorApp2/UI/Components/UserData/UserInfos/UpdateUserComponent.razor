




@* Rendering lastname field to update*@
@if (_editing == nameof(UserDTO_.Lastname))
{

            <MudForm>
                <MudCardContent>
                    <MudGrid>

                        <MudItem xs="8">
                    <MudTextField T="string" @bind-Value="UserDTO_.Lastname" Label="Lastname" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" />
                        </MudItem>
                   
                        <MudItem xs="2">
                            <MudButton>
                                <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Primary" OnClick="() => OnSubmit((_user) => _user.Lastname)" Size="Size.Small" Variant="Variant.Filled"/>
                            </MudButton>

                        </MudItem>

                        <MudItem xs="2">
                            <MudButton>
                                <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Secondary" OnClick="() => OnCancel()" Size="Size.Small" Variant="Variant.Filled" />
                            </MudButton>
                        </MudItem>
                   
                    </MudGrid>
                </MudCardContent>
            </MudForm>
}
    

