                   </MudGrid>
                  
                }

                @if (_renderUpdateUserFirstnameField)
                {
                    <MudTextField T="string" @bind-Value="_user.FirstName" Label="Firstname" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" />
                }

